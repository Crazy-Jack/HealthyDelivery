/* pages/log/log.wxss */
.content {
  font-family: "Microsoft YaHei";
  height: 100%;
}
.hr {
  height: 1px;
  background-color: #cccccc;
  margin-left: 10px;
  margin-right: 10px;
}
.fullline {
  height: 1px;
  background-color: #cccccc;
  margin-left: 10px;
  margin-right: 10px;
}

.address {
  width: 100%;
  line-height: 50px;
  display: flex;
  flex-direction: row;
  background-color: #000000;
  opacity: 0.7;
  color: #Ffffff;
  border-bottom: 1px solid #cccccc;
}
.desc {
  width: 80%;
  padding-left: 20px;
  text-align: left;
  font-size: 18px;
}
.detail {
  width: 20%;
  padding-right: 10px;
  text-align: center;
}

.dingdanbar {
  display: flex;
  flex-direction: row;
  margin: 5px 60px;
}
.dingdanicon {
  padding-left: 80px;
}
.dingdantext {
  width:100%;
  text-align: left;
  padding: 8px;


}








.items {
  margin-bottom: 65px;
}

.item {
  display: flex;
  flex-direction: row;
  padding: 10px;
  align-items: center;
  margin-left: 10px;
  margin-right: 10px;
}
.pic{
  padding: 5px;
}
.order {
  width: 100%;
  height: 87px;
}
.title {
  margin-left: 10px;
  font-size: 15px;
  text-align: left;
  font-weight: bold;
}
.priceInfo {
  display: flex;
  flex-direction: row;
  margin-top: 40px;
  margin-left: 10px;
}
.price {
  width: 60%;
  font-size: 15px;
  color: #ff0000;
  text-align: left;
}
.add {
  background-color: #FFD600;
  border: 1px solid #FFD600;
  border-radius: 20px;
  width: 20px;
  height: 20px;
  line-height: 20px;
  color: #000000;
  text-align: center;
  font-weight: bold;
}

.minus {
  border-radius: 20px;
  border: 1px solid #cccccc;
  width: 20px;
  height: 20px;
  line-height: 20px;
  color: #cccccc;
  text-align: center;
  font-weight: bold;

}
.count {
  line-height: 20px;
  margin-left: 10px;
  margin-right: 10px;
  font-size: 15px;
  font-weight: bold;
  text-align: center;
}

.all {
  background-color: #000000;
  color: #Ffffff;
  display: flex;
  flex-direction: row;
  height: 60px;
  align-items: center;
  padding-left: 10px;
  position: fixed;
  bottom: 0px;
  width: 100%;
}

.selectAll {
  opacity: 0.7;
  width: 20%;
  text-align: center;
  font-size: 15px;
  font-weight: bold;
}

.total {
  opacity: 0.7;
  width: 30%;
  font-size: 15px;
  color: #Ffffff;
  font-weight: bold;
  text-align: center;
}

.opr {
  position: absolute;
  right: 0px;
  width: 92px;
  font-size: 15px;
  font-weight: bold;
  background-color: #FFD600;
  height: 60px;
  line-height: 60px;
  text-align: center;
  color: #ffffff;
}

.countwithadd {
  background-color: #FFD700;
  border-radius: 20px;
  line-height: 20px;
  width: 20px;
  height: 20px;
  color: #000000;
  text-align: center;
  font-weight: bold;
  position: fixed;
  right: 5px;
}

.countwithminus {
  border-radius: 20px;
  line-height: 20px;
  width: 20px;
  height: 20px;
  color: #000000;
  text-align: center;
  font-weight: bold;
  position: fixed;
  right: 65px;
  border: 1px solid #cccccc;
  color: #cccccc;
}